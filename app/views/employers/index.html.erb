<p id="notice"><%= notice %></p>

<% if user_signed_in? %>



<%= search_form_for @search do |f| %>

  <div class="field">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>

<% end %>
<% if !@search.conditions.empty? %>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Website</th>
        <th>Industry</th>
  <!--       <th>Size</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>Evp</th>
        <th>Status</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employers.each do |employer| %>
        <tr>
          <td><%= employer.name %></td>
          <td><%= employer.address %></td>
          <td><%= employer.website %></td>
          <td><%= employer.industry %></td>
  <!--         <td><%= employer.size %></td>
          <td><%= employer.city %></td>
          <td><%= employer.state %></td>
          <td><%= employer.country %></td>
          <td><%= employer.evp %></td>
          <td><%= employer.status %></td> -->
          <td><%= link_to 'Show', employer %></td>
          <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
          <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>

<br>

<%= link_to 'Add New Employer', new_employer_path %>

<% else %>
<div class="intro">
  <h2>TalentPoolMe is the best way for undergraduates and employers to connect</h2>
  <h3>Explore potential companies, careers, and industries</h3>
  <%= link_to "Find Your Calling", new_user_registration_path, class: "btn btn-lg btn-primary", id: "signupbutton" %>
</div>
<% end%>
